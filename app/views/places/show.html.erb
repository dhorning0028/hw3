<h1><%= @place.name %></h1>

<h3>Places</h3>
<ul>
    <% for post in @place.posts %>
        <li>
            <%= "#{post.title}" %>
            <%= "#{post.posted_on}" %>
            <%= "#{post.description}" %>
        </li>
    <% end %>
</ul>

<a href="/posts/new?place_id=<%= @place.id %>">Add Post</a>

<a href="/places">Back to all places</a>