<h1><%= @place.name %></h1>

<ul>
    <% for post in @place.posts %>
<h2><%= "#{post.title}" %></h2>
        <li>  <%= "Date: #{post.posted_on}" %> </li>
        <li>  <%= "Description: #{post.description}" %> </li>
    <% end %>
</ul>

<a href="/posts/new?place_id=<%= @place.id %>">Add Post</a>

<a href="/places">Back to all places</a>

<p><%= button_to "Delete this place", @place, method: :delete %></p>
